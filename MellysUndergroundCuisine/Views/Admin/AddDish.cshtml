@model MellysUndergroundCuisine.Models.ViewModels.AddDishVM

<section class="vh-100">

    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Add A Dish</h2>

                            <form id="frmAddIngredient" asp-action="AddDish" asp-controller="Admin" enctype="multipart/form-data" method="post">
                                <div class="val" asp-validation-summary="All"></div>
                                <div class="form-outline mb-4">
                                    <input asp-for="Dish.Name" class="form-control form-control-lg" />
                                    <label class="form-label" asp-for="Dish.Name">Dish Name</label>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for="Dish.Information" class="form-control form-control-lg" />
                                    <label asp-for="Dish.Information" class="form-label">DishInformation</label>
                                </div>

                                <div class="form-outline  mb-4">
                                    <input asp-for="Dish.Price" class="form-control form-control-lg" />
                                    <label asp-for="Dish.Price" class="form-label">Price</label>
                                </div>

                                <div class="form-outline  mb-4">
                                    <input asp-for="Dish.Quantity" class="form-control form-control-lg" />
                                    <label asp-for="Dish.Quantity" class="form-label">Quantity</label>
                                </div>

                                <div class="form-outline mb-4">
                                    <label for="Ingredients"> Add a comma to seperate the ingredients</label>
                                        <textarea id="ingredientInput" spellcheck="true" autocomplete="false" 
                                                  autocapitalize="off" autocorrect="off" tabindex="1" dir="ltr" 
                                                  aria-label="To" role="combobox" aria-autocomplete="list"></textarea>
                                    <ul id="ingredientList">
                                        
                                    </ul>
                                </div>

                                <div class="form-outline  mb-4">
                                    <input asp-for="Dish.FoodImage" class="form-control form-control-lg" />
                                    <label asp-for="Dish.FoodImage" class="form-label">Browse</label>
                                </div>


                                <div class="d-flex justify-content-center">
                                    <button type="submit"
                                            class="btn btn-success btn-block btn-lg gradient-custom-4 text-body" id="btnAddDish">
                                        Add Dish
                                    </button>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Styles {
    <link href="/css/Register.css" rel="stylesheet" type="text/css" />
}

    @section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="~/js/adminpanel.js"></script>
    }
 }
