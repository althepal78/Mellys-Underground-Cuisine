@using MellysUndergroundCuisine.Models.ViewModels
@model List<DishVM>


<table class="table bg-black table-dark table-hover text-light border-5 border-secondary mt-2">
    <thead class="">
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Ingredients</th>
            <th>Dish Information</th>
            <th>Dish Price</th>
            <th>Quantities Left</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@item.FilePath" class="img-thumbnail" /></td>
                    <td>@item.Name</td>

                    <td>@item.InformationShort</td>
                    <td>@item</td>
                    <td>@item.InformationShort</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>Nada</td>
                <td>Nada</td>
                <td>Nada</td>
                <td>Nada</td>
            </tr>
        }
    </tbody>
</table>

