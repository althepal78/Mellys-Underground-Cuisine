@using MellysUndergroundCuisine.Models.ViewModels
@model List<DishVM>

<div class="container-fluid m-0 p-0">
    <div class="row justify-content-center m-0 p-0">
        <div class="col-12 col-lg-8">
            <table class="table bg-black table-dark table-hover text-light border-5 border-secondary mt-2">
                <thead class="">
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Ingredients</th>
                        <th>Dish Information</th>
                        <th>Dish Price</th>
                        <th>Quantities Left</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><img src="@item.FilePath" class="img-thumbnail" /></td>
                                <td>@item.Name</td>
                                <td>ingretyrdfyjvgty</td>
                                <td>@item.Information</td>
                                <td>$ @item.Price.ToString("0.00") </td>
                                <td>@item.Quantity</td>
                                <td>
                                    <a asp-controller="Admin" asp-action="AddIngredient" asp-route-id="@item.Id">Add Ingredients</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td>Nada</td>
                            <td>Nada</td>
                            <td>Nada</td>
                            <td>Nada</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>





